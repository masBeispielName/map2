{
    "name": "wa-map-optimizer-vite",
    "version": "1.1.14",
    "description": "Vite plugin for WA Map Optimizer",
    "main": "dist/index.js",
    "author": "Nolway (Alexis Faizeau)",
    "license": "AGPL-3.0",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "prepare": "husky install",
        "build": "tsc --build",
        "lint": "eslint --ext .js,.ts .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.8.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.4"
    },
    "dependencies": {
        "@workadventure/tiled-map-type-guard": "^2.1.1",
        "wa-map-optimizer": "^1.3.5"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "bash -c tsc",
            "git add dist"
        ],
        "*.{js,ts,json}": [
            "prettier --write"
        ]
    }
}
